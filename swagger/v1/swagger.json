{
  "openapi": "3.0.0",
  "info": {
    "title": "Coinbase Pro Search API V1",
    "version": "v1"
  },
  "paths": {
    "/api/v1/currencies": {
      "get": {
        "summary": "Returns matching currencies from Coinbase Pro",
        "tags": [
          "Currencies"
        ],
        "security": [
          {
            "bearer": [

            ]
          }
        ],
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "contains a currency name or portion of name to filter on",
            "example": "b",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "symbol",
            "in": "query",
            "description": "contains a symbol or portion of a symbol to filter on",
            "example": "b",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "indicates the maximum number of records the API should return",
            "default": 50,
            "example": 10,
            "minimum": 0,
            "maximum": 500,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "cursor",
            "in": "query",
            "description": "contains the cursor for pagination to start from, in Base64",
            "example": "YWZ0ZXJfX0JpdGNvaW4%3D",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sort",
            "in": "query",
            "description": "indicates the property and direction to sort the results on",
            "example": "name DESC",
            "enum": [
              "symbol DESC",
              "symbol ASC",
              "name DESC",
              "name ASC"
            ],
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "currencies found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "symbol": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "cursor": {
                      "type": "object",
                      "properties": {
                        "next_page": {
                          "oneOf": [
                            {
                              "type": "string"
                            },
                            {
                              "type": "null"
                            }
                          ]
                        },
                        "previous_page": {
                          "oneOf": [
                            {
                              "type": "string"
                            },
                            {
                              "type": "null"
                            }
                          ]
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "malformed request"
          },
          "404": {
            "description": "currencies not found"
          },
          "406": {
            "description": "unsupported accept header"
          },
          "401": {
            "description": "unauthorized"
          }
        }
      }
    },
    "/api/v1/pairs": {
      "get": {
        "summary": "Returns matching pairs from Coinbase Pro",
        "tags": [
          "Pairs"
        ],
        "security": [
          {
            "bearer": [

            ]
          }
        ],
        "parameters": [
          {
            "name": "symbols",
            "in": "query",
            "description": "contains symbols or a portion of symbols for desired pair to filter by",
            "example": "b",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "base_currency",
            "in": "query",
            "description": "contains the name or a portion of the name of a currency to filter on base currency",
            "example": "b",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "quote_currency",
            "in": "query",
            "description": "contains the name or a portion of the name of a currency to filter on quote currency",
            "example": "u",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "indicates the maximum number of records the API should return",
            "example": 10,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "cursor",
            "in": "query",
            "description": "contains the cursor for pagination to start from, in Base64",
            "example": "YmVmb3JlX19CVEMtVVNE",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sort",
            "in": "query",
            "description": "indicates the property and direction to sort the results on",
            "example": "symbols DESC",
            "enum": [
              "symbols ASC",
              "symbols DESC",
              "base_currency ASC",
              "base_currency DESC",
              "quote_currency ASC",
              "quote_currency DESC"
            ],
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "pairs found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "symbols": {
                            "type": "string"
                          },
                          "base_currency": {
                            "type": "string"
                          },
                          "quote_currency": {
                            "type": "string"
                          },
                          "status": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "cursor": {
                      "type": "object",
                      "properties": {
                        "next_page": {
                          "oneOf": [
                            {
                              "type": "string"
                            },
                            {
                              "type": "null"
                            }
                          ]
                        },
                        "previous_page": {
                          "oneOf": [
                            {
                              "type": "string"
                            },
                            {
                              "type": "null"
                            }
                          ]
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "422": {
            "description": "malformed request"
          },
          "404": {
            "description": "pairs not found"
          },
          "406": {
            "description": "unsupported accept header"
          },
          "401": {
            "description": "unauthorized"
          }
        }
      }
    },
    "/api/v1/pairs/{symbols}/rates": {
      "get": {
        "summary": "Returns historical rates in candlestick form for pair from Coinbase Pro",
        "tags": [
          "Pairs"
        ],
        "security": [
          {
            "bearer": [

            ]
          }
        ],
        "parameters": [
          {
            "name": "symbols",
            "in": "path",
            "description": "indicates the pair to get rates for by its symbols",
            "example": "BTC-USD",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "indicates the maximum number of records the API should return",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "cursor",
            "in": "query",
            "description": "contains the cursor for pagination to start from, in Base64",
            "example": "YmVmb3JlX18xNjExNjIxNTA3",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sort",
            "in": "query",
            "description": "indicates the property and direction to sort the results on",
            "example": "time ASC",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "interval",
            "in": "query",
            "description": "contains an integer indicating rate interval in seconds to build candlesticks from",
            "enum": [
              60,
              300,
              900,
              3600,
              21600,
              86400
            ],
            "example": 60,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "rates found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "time": {
                            "type": "string",
                            "format": "date-time"
                          },
                          "low": {
                            "type": "string"
                          },
                          "high": {
                            "type": "string"
                          },
                          "open": {
                            "type": "string"
                          },
                          "close": {
                            "type": "string"
                          },
                          "volume": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "cursor": {
                      "type": "object",
                      "properties": {
                        "next_page": {
                          "oneOf": [
                            {
                              "type": "string"
                            },
                            {
                              "type": "null"
                            }
                          ]
                        },
                        "previous_page": {
                          "oneOf": [
                            {
                              "type": "string"
                            },
                            {
                              "type": "null"
                            }
                          ]
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "pair not found"
          },
          "406": {
            "description": "unsupported accept header"
          },
          "422": {
            "description": "malformed request"
          },
          "401": {
            "description": "unauthorized"
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "http://{defaultHost}",
      "variables": {
        "defaultHost": {
          "default": "localhost:3000"
        }
      }
    },
    {
      "url": "https://{productionHost}",
      "variables": {
        "productionHost": {
          "default": "coinbase-search-api.herokuapp.com/"
        }
      }
    }
  ],
  "components": {
    "securitySchemes": {
      "bearer": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}